@{
    ViewData["Title"] = "Lecturer Dashboard";
    ViewData["ShowNavbar"] = true;
    ViewData["Role"] = "Lecturer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #e7c9ed;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            color: #5e165e;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #5e165e;
        }

            .btn-primary:hover {
                background-color: #4a0f4a;
            }

        .btn-danger {
            background-color: #f44336;
        }

            .btn-danger:hover {
                background-color: #e53935;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lecturer Dashboard</h2>
        <div>
            <a asp-action="SubmitClaim" class="btn btn-primary">Submit Claim</a>
            <a asp-action="ViewClaims" class="btn btn-primary">View My Claims</a>
            <a asp-action="UploadDocuments" class="btn btn-primary">Upload Documents</a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-danger">Log Out</a>
        </div>
    </div>
</body>
</html>
