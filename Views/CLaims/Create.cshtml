@model CMS.Models.ClaimView

<h2>Submit Claim</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Claim Date:</label>
        <input asp-for="ClaimDate" type="date" required />
    </div>
    <div>
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" type="number" step="0.1" required />
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input asp-for="HourlyRate" type="number" step="0.01" required />
    </div>
    <div>
        <label>Additional Notes:</label>
        <textarea asp-for="AdditionalNotes"></textarea>
    </div>
    <div>
        <label>Description of Work:</label>
        <textarea asp-for="DescriptionOfWork"></textarea>
    </div>
    <button type="submit">Submit Claim</button>
</form>