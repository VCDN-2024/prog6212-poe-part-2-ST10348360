
@{
    ViewData["Title"] = "Academic Manager Dashboard";
    ViewData["ShowNavbar"] = true;
    ViewData["Role"] = "AcademicManager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academic Manager Dashboard</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #c8a2c8; /* Light purple background */
        }

        /* Navbar Styles */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #b6a1d8;
            padding: 10px 20px;
        }

        .nav-links a {
            text-decoration: none;
            color: black;
            margin-right: 15px;
            padding: 10px 20px;
            background-color: #333;
            color: white;
            border-radius: 5px;
        }

            .nav-links a:hover {
                background-color: #555;
            }

        .right-section {
            display: flex;
            align-items: center;
        }

        .app-title {
            font-size: 24px;
            margin-right: 15px;
            color: black;
        }

        .profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .logout-btn {
            padding: 10px 15px;
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Dashboard Container */
        .container {
            text-align: center;
            margin-top: 30px;
        }

        .dashboard-title {
            background-color: #d3d3d3;
            padding: 10px;
            margin-bottom: 30px;
            font-size: 28px;
            color: black;
            border-radius: 5px;
        }

        /* Card Grid Layout */
        .card-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .card {
            background-color: #e0dfe8;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

            /* Lists inside Cards */
            .card ul {
                list-style: none;
                padding: 0;
                margin-top: 10px;
            }

                .card ul li {
                    margin: 10px 0;
                    font-size: 18px;
                }

            /* Inputs inside Cards */
            .card input {
                width: 100%;
                padding: 10px;
                margin: 5px 0;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: white;
                text-align: center;
            }

        /* Notification Styles */
        .notification {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .notification p {
                margin: 0;
            }

        .close-btn {
            background: none;
            border: none;
            font-size: 18px;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <div class="dashboard">
        <h2>Academic Manager Dashboard</h2>
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
           
            <link rel="stylesheet" href="styles.css">
        </head>
        


            <!-- Main Dashboard Content -->
            <div class="container">

                <div class="card-grid">
                    <div class="card">
                        <h2>Claims Processing Overview</h2>
                        <ul>
                            <li>➤ Claim420</li>
                            <li>➤ Claim751</li>
                            <li>➤ Claim500</li>
                        </ul>
                    </div>

                    <div class="card">
                        <h2>Payroll Reports Section</h2>
                        <p>Total claims</p>
                        <input type="text" value="80" readonly>
                        <p>Pending claims</p>
                        <input type="text" value="15" readonly>
                    </div>

                    <div class="card">
                        <h2>Lecturer Data Overview</h2>
                        <ul>
                            <li>➤ Mrs Lilly Smith</li>
                            <li>➤ Mr Bob Marley</li>
                            <li>➤ Miss Jackson</li>
                        </ul>
                    </div>

                    <div class="card">
                        <h2>Recent Documents</h2>
                        <ul>
                            <li>➤ Invoice420</li>
                        </ul>
                    </div>

                    <div class="card">
                        <h2>Notification</h2>
                        <div class="notification">
                            <p>No new notifications</p>
                            <button class="close-btn">✖</button>
                        </div>
                    </div>
                </div>
            </div>
        
    
    <div class="dashboard">
        



        <form method="post" action="/Account/Logout" style="display:inline-block;">
            <a asp-controller="Login" asp-action="Logout" class="btn btn-danger">Log Out</a>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>